<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/appBarLayout">

    </android.support.design.widget.AppBarLayout>

    <Space android:id="@+id/dummy"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_centerVertical="true"
           android:visibility="invisible"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/entry_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dummy">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/entry_text_input"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/entry_hint"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_entry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_entry"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/entry_text"/>

</RelativeLayout>
